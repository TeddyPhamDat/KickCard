<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Wallet"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Wallet Balance Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current Balance"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvWalletBalance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 ₫"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Top Up Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Top Up Wallet"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select amount to top up:"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn50k"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="50.000 ₫"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn100k"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="100.000 ₫"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn200k"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="200.000 ₫"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn500k"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="500.000 ₫"
                        android:layout_marginBottom="16dp" />

                    <EditText
                        android:id="@+id/etCustomAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter custom amount..."
                        android:inputType="number"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvSelectedAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selected amount: 0 ₫"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btnTopUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Top Up"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Transaction History -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Transaction History"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btnTransactionHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View History"
                        style="?android:attr/buttonStyleSmall" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:visibility="gone" />

</LinearLayout>
