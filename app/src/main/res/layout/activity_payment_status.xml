<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nạp tiền vào ví"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50.000 ₫"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvOrderCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng: 1699234567890"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <!-- Status Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:elevation="4dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivStatusIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_hourglass_empty"
                android:layout_marginBottom="16dp"
                android:tint="@android:color/holo_orange_dark" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đang chờ thanh toán..."
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/holo_orange_dark"
                android:layout_marginBottom="16dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Polling Progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ProgressBar
            android:id="@+id/progressPolling"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang kiểm tra trạng thái thanh toán..."
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <!-- Instructions -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:elevation="2dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hướng dẫn:"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Nhấn 'Mở VNPay' để thanh toán\n2. Chọn ngân hàng hoặc ví điện tử\n3. Xác nhận thanh toán trên app ngân hàng\n4. Quay lại app để kiểm tra kết quả"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:textColor="#666666" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnOpenPayOS"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Mở VNPay để thanh toán"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_open_in_browser"
            android:drawablePadding="8dp" />

        <Button
            android:id="@+id/btnCheckStatus"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Kiểm tra trạng thái"
            android:textSize="14sp"
            style="?android:attr/buttonStyleSmall"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_refresh"
            android:drawablePadding="8dp" />

        <Button
            android:id="@+id/btnForceCheck"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Force Check (VNPay API)"
            android:textSize="12sp"
            style="?android:attr/buttonStyleSmall"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"
            android:drawableStart="@drawable/ic_refresh"
            android:drawablePadding="8dp" />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Hoàn thành"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:drawableStart="@drawable/ic_check"
            android:drawablePadding="8dp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Hủy"
            android:textSize="14sp"
            style="?android:attr/buttonStyleSmall"
            android:textColor="@android:color/holo_red_dark" />

    </LinearLayout>

</LinearLayout>