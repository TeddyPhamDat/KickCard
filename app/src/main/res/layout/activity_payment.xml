<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:text="Mua Thẻ" />

        <com.google.android.material.tabs.TabItem
            android:text="Nạp Ví" />

    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/frameContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/layoutCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/cardInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/imgCard"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:contentDescription="Card Image" />

                        <TextView
                            android:id="@+id/tvCardName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Card Name"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvCardPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Price" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/paymentInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvPaymentStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment Status" />

                        <TextView
                            android:id="@+id/tvOrderCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order Code"
                            android:layout_marginTop="8dp" />

                        <Button
                            android:id="@+id/btnCopyOrderCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copy"
                            android:layout_marginTop="8dp" />

                        <ProgressBar
                            android:id="@+id/progressStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutWallet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:id="@+id/tvWalletBalance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Số dư: 0 "
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chọn số tiền nạp:"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/btn50k"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="50.000 "
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/btn100k"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="100.000 "
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/btn200k"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="200.000 "
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/btn500k"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="500.000 "
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/etCustomAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nhập số tiền khác..."
                            android:inputType="number"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvSelectedAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Số tiền đã chọn: 0 "
                            android:textStyle="bold"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnPayNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh Toán"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTopUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nạp Ví"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCheckStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kiểm Tra Trạng Thái"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủy" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:visibility="gone" />

</LinearLayout>