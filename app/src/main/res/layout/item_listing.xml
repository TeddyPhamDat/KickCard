<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Thumbnail: Using a fixed size similar to item_my_card.xml -->
        <ImageView
            android:id="@+id/imgThumb"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:contentDescription="Card Thumbnail"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

        <!-- Info Section: Vertical LinearLayout to hold texts -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Card Name -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textStyle="bold"
                tools:text="Lionel Messi" />

            <!-- Rarity -->
            <TextView
                android:id="@+id/tvRarity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Legendary" />

            <!-- Price -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                tools:text="VND 5,000,000" />
        </LinearLayout>

        <!-- View Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnView"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
