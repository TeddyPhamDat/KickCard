<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.KickCard"
        tools:targetApi="31">
        <activity
            android:name=".LauncherActivity"
            android:exported="true"
            android:theme="@style/Theme.KickCard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".auth.login.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.KickCard" />

        <activity
            android:name=".auth.register.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.KickCard" />

        <activity
            android:name=".ui.CreateListingActivity"
            android:exported="false"
            android:theme="@style/Theme.KickCard" />

        <activity
            android:name=".ui.EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.KickCard" />

        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.KickCard" />

        <activity
            android:name=".ui.PaymentActivity"
            android:exported="true"
            android:theme="@style/Theme.KickCard">

            <!-- Deep link intent filters for PayOS callbacks -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="kickcard" android:host="payment" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.PaymentHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.KickCard" />

        <activity
            android:name=".ui.PaymentStatusActivity"
            android:exported="false"
            android:theme="@style/Theme.KickCard" />

        <activity
            android:name=".ui.TransactionHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.KickCard"
            android:label="Transaction History" />
    </application>

</manifest>